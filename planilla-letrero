float salarioneto(float x)
{
	if(x>15000)
			{ x=x-x*(AFP + 0.01 +0.13);
		    }
		  else{
		     if(x>2*Smin)
			   {  x=x*(1-0.13-0.121);
			  }
			 else{
			   x=x*(1-0.121);
			 }
		  }
return(x);
}

