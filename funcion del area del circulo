
#include "stdafx.h"
#include "conio.h"
#include "stdlib.h"
#include <iostream>
#define pi 3.141516

using namespace std;
float area_circulo (float r)
{float A;
A=pi*r*r;
	return A;
 }

void main()
{ float radio;
cout<<"Ingrese el radio del circulo para conocer su area";
cin>>radio;
cout<<"El area es "<<area_circulo(radio);
getch();


}
