#include "stdafx.h"
#include "conio.h"
#include "stdlib.h"
#include <iostream>
#define IVA 0.13
#define AFP 0.121
#define Smin 1420
	using namespace std;

void main()
{   float SB,Prom,S;
	int i=0,N;
	S=0;
	cout<<"Ingrese el salario bruto"<<endl;
	cin>>SB;
	while(SB!=-999)
	 {SB=SB*(1-AFP);
		  if(SB>15000)
			{ SB=SB*(1-0.01);
			 SB=SB*(1-IVA);
		    }
		  else{
		     if(SB>=2*Smin)
			   {  SB=SB*(1-IVA);
			 
			  }
		  }
		  
		  S=S+SB;
		  i++;
	cout<<"Ingrese el salario bruto y si no desea continuar ingrese -999"<<endl;
    cin>>SB;	
	}
 
	Prom=S/i;
	cout<<"El promedio de los salarios de los "<<i<<" trabajadores es "<<Prom; 

getch();
}
